<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/size_supersmall"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/size_supersmall"
            android:paddingRight="@dimen/size_supersmall"
            android:layout_margin="@dimen/size_supersmall"
            android:layout_height="70dp">
        <ImageView
                android:src="@drawable/ic_pbb"
                android:layout_width="wrap_content"
                android:id="@+id/item_img"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
        <customfonts.MyRobotoTextView
                android:layout_below="@id/item_img"
                android:textAlignment="center"
                android:id="@+id/item_text"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
